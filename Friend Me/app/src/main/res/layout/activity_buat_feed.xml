<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.feed.BuatFeedActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/mainOrangeColor">

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:id="@+id/ivBackBuatFeed"
            android:src="@drawable/ic_arrowleft"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buat Feed"
            android:textSize="@dimen/_14ssp"
            android:textColor="@color/white"
            android:fontFamily="@font/roboto_regular"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:id="@+id/ivUploadImageFeed"
            android:src="@drawable/ic_camerawhite"
            android:layout_margin="@dimen/_10sdp"/>

        <ImageView
            android:layout_width="@dimen/_24sdp"
            android:layout_height="@dimen/_24sdp"
            android:id="@+id/ivSendFeed"
            android:src="@drawable/ic_sendfeed"
            android:layout_margin="@dimen/_10sdp"/>
    </LinearLayout>

    <io.github.rockerhieu.emojicon.EmojiconEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtMessageFeed"
        android:hint="What's on your mind?"
        android:textColor="@color/blackText"
        android:textColorHint="@color/greyText"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/roboto_regular"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:inputType="textMultiLine"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:id="@+id/ivImageFeed"
        android:layout_marginTop="@dimen/_10sdp"/>
</LinearLayout>